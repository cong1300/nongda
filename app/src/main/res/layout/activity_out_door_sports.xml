<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_out_door_sports"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xinnuo.apple.nongda.studentActivity.OutDoorSports.OutDoorSportsActivity"
    android:orientation="vertical">


    <Button
        android:onClick="onClickSports"

        android:text="运动开始"
        android:layout_width="match_parent"
        android:id="@+id/btn_outdoor_sports"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:background="@drawable/shape_button_circular"
        android:textColor="@color/encode_view" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1" />

    <Button
        android:onClick="onClickSportsRecords"
        android:textSize="20dp"
        android:text="运动量记录"
        android:layout_width="match_parent"
        android:id="@+id/btn_outdoor_records"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:background="@drawable/shape_button_circular"
        android:textColor="@color/encode_view" />
</LinearLayout>
