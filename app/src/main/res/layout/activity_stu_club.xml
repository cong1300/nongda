<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stu_club"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xinnuo.apple.nongda.studentActivity.StuClub.StuClubActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="日 期↓"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/weeks"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/week"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:text="所有"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/textview_bottom"
                android:id="@+id/Alldate"
                android:textAlignment="center" />

            <TextView
                android:text="星期一"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/textview_bottom"
                android:id="@+id/Monday"
                android:textAlignment="center" />

            <TextView
                android:text="星期二"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/textview_bottom"
                android:id="@+id/Tuesday"
                android:textAlignment="center" />

            <TextView
                android:text="星期三"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/textview_bottom"
                android:id="@+id/Wednesday"
                android:textAlignment="center" />

            <TextView
                android:text="星期四"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/textview_bottom"
                android:id="@+id/Thursday"
                android:textAlignment="center" />

            <TextView
                android:text="星期五"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/textview_bottom"
                android:id="@+id/Friday"
                android:textAlignment="center" />

            <TextView
                android:text="星期六"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/textview_bottom"
                android:id="@+id/Saturday"
                android:textAlignment="center" />

            <TextView
                android:text="星期天"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/textview_bottom"
                android:id="@+id/Sunday"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ListView"
            >

            <com.xinnuo.apple.nongda.view.XListView
                android:id="@+id/xListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:cacheColorHint="#00000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
            </com.xinnuo.apple.nongda.view.XListView>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
