<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/stu_campus"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/jpush_richpush_progressbar"
            android:id="@+id/stu_photo"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@drawable/textview_bottom"
                android:id="@+id/stu_title"
                android:textAlignment="textStart"
                android:layout_height="34dp"
                android:textStyle="normal|bold"
                android:textSize="16sp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:gravity="center"
                android:id="@+id/stu_title1"
                android:background="@color/encode_view"
                android:textAlignment="textStart"
                android:layout_height="33dp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@color/encode_view"
                android:id="@+id/stu_title2"
                android:textAlignment="textStart"
                android:layout_height="33dp" />
        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1" />
</LinearLayout>
