<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xinnuo.apple.nongda.Binding.TeacherBindingActivity">
    <Button
        android:id="@+id/loginBtn"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:text="立即绑定"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/passwordEditTV"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/nameTit"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:text="工    号"
        android:layout_alignBottom="@+id/nameEditTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/nameEditTV"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:textSize="18sp"
        android:layout_above="@+id/passwordEditTV"
        android:layout_toRightOf="@+id/nameTit"
        android:layout_toEndOf="@+id/nameTit" />

    <TextView
        android:id="@+id/keyTit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:layout_marginTop="142dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/passwordEditTV"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:ems="10"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/keyTit"
        android:layout_alignBottom="@+id/keyTit"
        android:layout_alignLeft="@+id/nameEditTV"
        android:layout_alignStart="@+id/nameEditTV" />
    <TextView
        android:id="@+id/tv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        />

</RelativeLayout>
