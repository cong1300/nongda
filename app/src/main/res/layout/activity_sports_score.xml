<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sports_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.xinnuo.apple.nongda.TeacherActivity.SportsStandards.SportsScore">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/encode_view">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="   项目:"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="@color/contents_text"
                android:gravity="center"
                android:textAlignment="textStart" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:id="@+id/sport_event"
                android:textColor="@color/contents_text"
                android:gravity="center"
                android:textAlignment="textStart" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="   学生姓名:"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView82"
                android:layout_weight="2"
                android:textColor="@color/contents_text"
                android:gravity="center"
                android:textAlignment="textStart" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/sport_stu_name"
                android:layout_weight="6"
                android:textColor="@color/contents_text"
                android:gravity="center"
                android:textAlignment="textStart" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="   学号:"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView85"
                android:layout_weight="2"
                android:textColor="@color/contents_text"
                android:gravity="center"
                android:textAlignment="textStart" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/sport_stu_number"
                android:layout_weight="6"
                android:textColor="@color/contents_text"
                android:gravity="center"
                android:textAlignment="viewStart" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="   分数:"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView87"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/contents_text"
                android:textAlignment="textStart" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/sport_stu_score"
                android:hint="输入分数"
                android:layout_weight="6"
                android:textColor="@color/contents_text"
                android:gravity="center"
                android:textAlignment="viewStart" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:text="保存"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/sport_submission"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:textColor="@color/encode_view" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
